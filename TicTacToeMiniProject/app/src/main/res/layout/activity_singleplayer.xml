<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_singleplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saivishwak.tictactoeminiproject.singleplayer"
    android:background="@drawable/androidimage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="96dp"
        android:id="@+id/player1"
        android:hint="Enter Player Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textColorHint="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberOfG"
        android:layout_below="@+id/player1"
        android:layout_alignLeft="@+id/player1"
        android:layout_alignStart="@+id/player1"
        android:layout_marginTop="38dp"
        android:hint="No Of Games"
        android:textColorHint="@android:color/black" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/button6"
        android:textSize="20sp"
        android:onClick="singlePlayerGame"
        android:layout_below="@+id/numberOfG"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
